{% extends 'admin/base.html.twig' %}

{% set page = "admin.admin.antenne" %}
{% set pageHeader = "Gestion des antennes" %}

{% block body %}
    <div id="wrapper">
        <div id="container">

            <div class="box">
                <div class="box-header">
                    <div class="box-tools pull-right">
                        <a href="{{ path("admin.antenne.create") }}" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
                <div class="box-body no-padding">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Nom court</th>
                                <th width="150px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for antenne in antenne %}
                            <tr {% if antenne.archived %}class="active"{% endif %}>
                                <td>{{ antenne.name }}</td>
                                <td>{{ antenne.shortName }}</td>
                                <td>
                                    <a href="{{ path('admin.antenne.edit', {'id': antenne.id}) }}" class="btn btn-warning btn-xs">Editer</a>
                                    {% if antenne.archived %}
                                        <a href="{{ path('admin.antenne.activer', {'id': antenne.id}) }}" class="btn btn-success btn-xs">Activer</a>
                                    {% else %}
                                        <a href="{{ path('admin.antenne.archive', {'id': antenne.id}) }}" class="btn btn-danger btn-xs">Archiver</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr class="info"><td colspan="3">Aucune Antennes</td></tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<style>

</style>
{% endblock %}
