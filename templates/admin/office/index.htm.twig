{% extends 'admin/common/page.html.twig' %}

{% block title %}Antennes{% endblock %}

{% block topAction %}
    <a class="btn btn-success" href="{{ path('admin.office.add') }}"><i class="fa fa-plus"></i> Ajouter</a>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_content">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th style="width: 20%">Nom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th style="width: 20%"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for office in offices %}
                            <tr>
                                <td>
                                    {{ office.name }}
                                </td>
                                <td>
                                    {{ office.email }}
                                </td>
                                <td>
                                    {{ office.phone }}
                                </td>
                                <td>
                                    <a href="{{ path('admin.office.edit', {'office': office.id}) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Éditer </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
